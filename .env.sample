_PRIMARY.ENV="local"

_SERVER.PORT="8080"
_SERVER.READ_TIMEOUT="30"
_SERVER.WRITE_TIMEOUT="30"
_SERVER.IDLE_TIMEOUT="60"
_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

_DATABASE.HOST="localhost"
_DATABASE.PORT="5432"
_DATABASE.USER="postgres"
_DATABASE.PASSWORD=""
_DATABASE.NAME=""
_DATABASE.SSL_MODE="disable"
_DATABASE.MAX_OPEN_CONNS="25"
_DATABASE.MAX_IDLE_CONNS="25"
_DATABASE.CONN_MAX_LIFETIME="300"
_DATABASE.CONN_MAX_IDLE_TIME="300"

_AUTH.SECRET_KEY="secret"

_INTEGRATION.RESEND_API_KEY="resend_key"

_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
_OBSERVABILITY.SERVICE_NAME=""
_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
_OBSERVABILITY.LOGGING.LEVEL="debug"
_OBSERVABILITY.LOGGING.FORMAT="console"
_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"